<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length > 0) { %>
                <ul class="cart__item-list">
                    <% orders.forEach(o => { %>
                        <li class="cart__item">
                            <h1># <%= o.id %></h1>
                            <% o.products.forEach(p => { %>
                                <p><%= p.title %>: <%= p.orderItem.qty %></p>
                            <% }) %>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <h1>No Orders!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>